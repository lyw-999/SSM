<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">


    <!--  第一种赋值-->
    <bean id="student"  class="SpringZuoyeTest0.Student">
        <property name="name" value="李小狼"></property>
        <property name="age" value="21"></property>
        <property name="sex" value="男"></property>

        <!--  List类型-->
        <property name="teacherName" >
            <list>
                <value>王老师</value>
                <value>李老师</value>
                <value>赵老师</value>
                <value>张老师</value>
            </list>
        </property>
        <!-- Set类型  -->
        <property name="lifemoney">
            <set>
                <value>1000</value>
                <value>900</value>
                <value>1000</value>
                <value>1200</value>
            </set>
        </property>
        <!-- Map类型    -->
        <property name="score">
            <map>
                <entry key="java" value="99">  </entry>
                <entry key="jquery" value="100">  </entry>
                <entry key="vue" value="70">  </entry>
            </map>
        </property>
    </bean>

</beans>